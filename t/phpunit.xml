<?xml version="1.0" encoding="UTF-8"?>

<phpunit
	verbose="true"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	processIsolation="false"
	stopOnFailure="false"
	syntaxCheck="true"
>

	<testsuites>
		<testsuite name="Collector">
			<directory>Collector</directory>
		</testsuite>
		<testsuite name="Extension">
			<directory>Extension</directory>
		</testsuite>
	</testsuites>
	<logging>
		<log type="coverage-html" target="/tmp/report" charset="UTF-8" yui="true" highlight="true" lowUpperBound="35" highLowerBound="70"/>
	</logging>
</phpunit>
